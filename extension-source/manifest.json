{
    "manifest_version": 3,
    "name": "Checker",
    "description": "Does security checks of the current domain.",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/standard-icon.png"
    },
    "icons": {
        "16": "images/extension-display-icon.png",
        "32": "images/extension-display-icon.png",
        "48": "images/extension-display-icon.png",
        "128": "images/extension-display-icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "action",
        "storage",
        "unlimitedStorage",
        "webNavigation"
    ]
}